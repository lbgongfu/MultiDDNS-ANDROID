<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_mgr_detail" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="cn.lbgongfu.multiddns.MgrInfoActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/content_top_margin"
        android:paddingLeft="@dimen/content_horizontal_margin"
        android:paddingRight="@dimen/content_horizontal_margin">

        <View
            android:layout_height="1dip"
            android:background="#B7B7B7" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/style_table_row">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/label_kcid"
                android:id="@+id/textView15"
                android:layout_column="1" />

            <Space
                android:layout_width="@dimen/horizontal_space"
                android:layout_height="@dimen/vertical_space"
                android:layout_column="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/text_kcid"
                android:layout_column="3" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="#B7B7B7" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/style_table_row">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/label_kb"
                android:id="@+id/textView16"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/text_kb"
                android:layout_column="3" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="#B7B7B7" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/style_table_row">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/label_nickname"
                android:id="@+id/textView19"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/text_nickname"
                android:layout_column="3" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="#B7B7B7" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/style_table_row">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/label_email"
                android:id="@+id/textView20"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/text_email"
                android:layout_column="3" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="#B7B7B7" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/style_table_row">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/label_mobile"
                android:id="@+id/textView21"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/text_phone_number"
                android:layout_column="3" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="#B7B7B7" />

    </TableLayout>

</android.support.v4.widget.NestedScrollView>
